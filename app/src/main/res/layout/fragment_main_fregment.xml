<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.MainFregment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <soup.neumorphism.NeumorphCardView
                android:layout_marginTop="@dimen/_20sdp"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:neumorph_shapeType="flat">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ImgSelect"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_7sdp"
                    android:src="@drawable/profile" />

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/txtSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:text="Select Tour Image"
                android:fontFamily="@font/limelight"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp" />

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/nameNeu"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:neumorph_shapeType="basin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/itemname" />

                    <EditText
                        android:id="@+id/edtItemName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/transparent"
                        android:hint="Name"
                        android:padding="14dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:neumorph_shapeType="basin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/itemprice" />

                    <EditText
                        android:id="@+id/edtItemPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/transparent"
                        android:hint="Price"
                        android:inputType="number"
                        android:padding="14dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/limelight"
                android:text="Enter Destination"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_15ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <soup.neumorphism.NeumorphCardView
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:neumorph_shapeType="basin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:src="@drawable/starttour" />

                        <EditText
                            android:id="@+id/edtItemStartDes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/transparent"
                            android:hint="Start"
                            android:padding="14dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color" />
                    </LinearLayout>
                </soup.neumorphism.NeumorphCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:fontFamily="@font/limelight"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_15ssp" />

                <soup.neumorphism.NeumorphCardView
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:neumorph_shapeType="basin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:src="@drawable/endtour" />

                        <EditText

                            android:id="@+id/edtItemToEndDes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/transparent"
                            android:hint="End"
                            android:padding="14dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color" />
                    </LinearLayout>
                </soup.neumorphism.NeumorphCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <soup.neumorphism.NeumorphCardView
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:neumorph_shapeType="basin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:src="@drawable/itemday" />

                        <EditText
                            android:id="@+id/edtItemDay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/transparent"
                            android:hint="Day"

                            android:inputType="number"
                            android:padding="14dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color" />
                    </LinearLayout>
                </soup.neumorphism.NeumorphCardView>


                <soup.neumorphism.NeumorphCardView
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:neumorph_shapeType="basin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:src="@drawable/itemperson" />

                        <EditText
                            android:id="@+id/edtItemPerson"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/transparent"
                            android:hint="Person"
                            android:inputType="number"
                            android:padding="14dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color" />
                    </LinearLayout>
                </soup.neumorphism.NeumorphCardView>
            </LinearLayout>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:neumorph_shapeType="basin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/itemdescription" />

                    <EditText
                        android:id="@+id/edtItemDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/transparent"
                        android:hint="Description"
                        android:padding="14dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <soup.neumorphism.NeumorphCardView
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:neumorph_shapeType="basin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:src="@drawable/latlog" />

                        <EditText
                            android:id="@+id/edtItemLatitude"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/transparent"
                            android:hint="latitude"
                            android:padding="14dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color" />
                    </LinearLayout>
                </soup.neumorphism.NeumorphCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:fontFamily="@font/limelight"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_15ssp" />

                <soup.neumorphism.NeumorphCardView
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:neumorph_shapeType="basin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:src="@drawable/latlog" />

                        <EditText

                            android:id="@+id/edtItemLongitude"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/transparent"
                            android:hint="longitude"
                            android:padding="14dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color" />
                    </LinearLayout>
                </soup.neumorphism.NeumorphCardView>
            </LinearLayout>


            <soup.neumorphism.NeumorphButton
                android:id="@+id/btnSubmitItem"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/limelight"
                android:text="Submit"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>